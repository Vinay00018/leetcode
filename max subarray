class Solution {
    public int maxSubArray(int[] nums) {
        
        int sum = nums[0];
        int max = nums[0];

        for (int i = 1; i < nums.length; i++) {
            if (sum < 0) {
                sum = nums[i];  // start new subarray
            } else {
                sum += nums[i]; // continue current subarray
            }
            if (sum > max) {
                max = sum;     // update max if needed
            }
        }
        return max;
    }
}
